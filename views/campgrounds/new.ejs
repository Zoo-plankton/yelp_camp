<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Add a new campground</h1>
    <div class="rowcenter-items">
        <div class="col-md-9 mt-3 mx-auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Campground Name" required>
            </div>
            <div class="form-group">
               <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
               <textarea rows="8" class="form-control" type="text" name="description" placeholder="Description..." required></textarea>
            </div
            <div class="form-group">
                <button class="btn btn-large btn-primary">Submit</button>
                <a class="btn btn-large btn-secondary" href="/campgrounds">Back</a>
            </div>
        </form>
        </div>
    </div>    
</div>
<% include ../partials/footer %>