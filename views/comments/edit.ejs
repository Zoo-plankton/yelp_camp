<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit comment for <%= campground.name %></h1>
    <div class="row">
        <div class="col-md-6 mx-auto my-3">
        <form action="/campgrounds/<%= campground._id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
               <textarea rows="2" class="form-control" type="text" name="comment[text]" required><%= comment.text %></textarea>
            </div>
            <div class="form-group d-inline float-left">
                <button class="btn btn-large btn-outline-primary">Submit</button>
                <a class="btn btn-large btn-outline-warning" href="/campgrounds/<%= campground._id %>">Back</a>
            </div>
        </form class="d-inline">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
            <button class="btn btn-large btn-outline-danger float-right">Delete</button>
        </form>
        </div>
    </div>    
</div>
<% include ../partials/footer %>