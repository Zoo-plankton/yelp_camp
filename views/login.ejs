<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto form-group">
            <h1 class="text-center">Log in!</h1>
            <form class="mt-5" action="/login" method="POST">
                <div class="form-group">
                    <label for="login-username">Username:</label>
                    <input id="login-username" class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="login-password">Password:</label>
                    <input id="login-password" class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="text-center">
                    <button class="btn btn-med btn-outline-success">Submit</button>
                    <a href="/campgrounds" class="btn btn-med btn-outline-secondary">Cancel</a>
                </div>
           </form>
        </div>
    </div>
</div>

