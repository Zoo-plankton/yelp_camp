<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto form-group">
            <h1 class="text-center">Sign Up!</h1>
            <form class="mt-4" action="/register" method="POST">
                <div class="form-group">
                    <label for="register-username">Username:</label>
                    <input class="form-control" type="text" name="username" placeholder="Username" aria-describedBy="register-username-help">
                    <small id="register-username-help" class="form-text text-muted text-right">This will be displayed whenever you comment.</small>
                </div>
                <div class="form-group">
                    <label for="register-password">Password:</label>
                    <input class="form-control" type="password" name="password" placeholder="Password" aria-describedBy="register-password-help">
                    <small id="register-password-help" class="form-text text-muted text-right">Just make it "password".</small>
                </div>
                <div class="text-center">
                    <button class="btn btn-med btn-outline-success">Submit</button>
                    <a href="/campgrounds" class="btn btn-med btn-outline-secondary">Cancel</a>
                </div>
           </form>
        </div>
    </div>
</div>

